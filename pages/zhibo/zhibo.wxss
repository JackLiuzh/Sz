/* pages/zhibo/zhibo.wxss */
.top{
  padding: 40rpx 32rpx;
  background: white;
}
.tit{
  font-size:32rpx;
  font-weight:400;
  line-height:36rpx;
  color:rgba(10,10,10,1);
  opacity:1;
}
 .cell{
  margin-top: 32rpx;
  display: flex;
  flex-direction: row;
   
}
.cell .cell_ri{
  margin-left: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cell .cell_ri .ri_top{
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:36rpx;
  color:rgba(10,10,10,1);
  opacity:1;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.cell .cell_ri .ri_mid{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:36rpx;
  color:rgba(136,136,136,1);
  opacity:1;
}
.cell .cell_ri .ri_mid image{
  vertical-align: middle;
}
.cell .cell_ri .ri_mid text{
  vertical-align: middle;
  margin-left: 12rpx;
}
 .cell .cell_ri .ri_but{
   display: flex;
   justify-content: space-between;
}
 .cell .cell_ri .ri_but text{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:36rpx;
  color:rgba(136,136,136,1);
  opacity:1;
}
 .cell .cell_ri .ri_but view.dd{
    height: 48rpx;
    width:168rpx;
    font-size:24rpx;
    font-family:PingFang SC;
    font-weight:400;
    line-height:48rpx;
    color:rgba(255,255,255,1);
    opacity:1;
    background:rgba(230,85,87,1);
    border-radius:60rpx;
    text-align: center;
}

.middle{
  margin-top: 22rpx;
  padding: 40rpx 32rpx;
  background: white;
}
.but{
  margin-top: 22rpx;
  padding: 40rpx 32rpx;
  background: white;
}
.but .but_sy{
   width:132rpx;
   height: 48rpx;
   background:rgba(43,145,254,1)!important;
   opacity:1;
   border-radius:60rpx;
   font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:48rpx;
  color:rgba(255,255,255,1);
  text-align: center;
}