.bottom_content {
  margin:40rpx;
}
.bottom_content .box1{
   background-color: #ffffff;
   height: 204rpx;
   padding:30rpx;
   box-sizing: border-box;
   margin-top: 40rpx;
}
.bottom_content .box1 .b_top{
  display: flex;
  position: relative;
  justify-content: space-between;
  overflow:hidden;
}
.bottom_content .box1 .b_top .b_t_left .te1{
  line-height: 50rpx;
  font-size: 36rpx;
  color: #444444;
  font-weight: bold;
}
.bottom_content .box1 .b_top .b_t_left .te_done{
  text-decoration: line-through;
}
.bottom_content .box1 .b_top .b_t_left .te2{
  font-size: 28rpx;
  color: #888888;
  margin-top: 20rpx;
}
.bottom_content .box1 .b_top .done_img{
  position: absolute;
  top:0rpx;
  right: 70rpx;
}
.bottom_content .box1 .b_bom .bar{
    width: 100%;
    height: 12rpx;
    border-radius: 10rpx;
    background-color: #FCEFEF;
    position: relative;
    overflow: hidden;
    margin-top: 14rpx;
}
.bottom_content .box1 .b_bom .bar .bar_fu
{
    height: inherit;
    position: absolute;
    background:linear-gradient(to right,#F4713D,#F55E63);
    top: 0;
    left: 0;
    right: 0;
    border-radius: 10rpx;
    content: "";
    opacity: 1;
    width: 60%;
}


.botom_but {
   display: flex;
   justify-content: center;
   align-items: center;
}

.botom_but .but{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  border: 1rpx solid #CCCCCC;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-bottom: 56rpx;
}
